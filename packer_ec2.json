{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "us-east-1",
      "source_ami": "ami-35dbde5c",
      "instance_type": "c3.large",
      "ssh_username": "ubuntu",
      "ssh_timeout": "10m",
      "ssh_pty" : true,
      "ami_name": "CKAN 2.2 {{timestamp}}",
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_size": 20,
          "delete_on_termination": true
        }
      ]
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "packerfiles/migrate_vagrant.sh"
      ]
    },
    {
      "type": "file",
      "source": "files",
      "destination": "/vagrant"
    },
    {
      "type": "shell",
      "scripts": [
        "packerfiles/bootstrap_packer.sh"
      ]
    },
    {
      "type": "shell",
      "scripts": [
        "cleanup.sh"
      ]
    }
  ]
}
